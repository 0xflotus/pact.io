{
  "name": "@pact-foundation/pact.io",
  "version": "1.0.0",
  "description": "The pact.io website where we explain what pact is and try to achieve",
  "homepage": "https://github.com/pact-foundation/pact.io#readme",
  "engine": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/pact-foundation/pact.io.git"
  },
  "keywords": [
    "pact",
    "foundation",
    "pact.io",
    "pact-foundation",
    "website"
  ],
  "author": "Michel Boudreau <michelboudreau@gmail.com> (codinghitchhiker.com)",
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pact-foundation/pact.io/issues"
  },
  "main": "n/a",
  "dependencies": {
    "@types/lodash": "^4.14.87",
    "@types/react": "16.0.27",
    "@types/react-dom": "^16.0.3",
    "@types/react-helmet": "5.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-router": "^4.0.19",
    "@types/react-router-dom": "^4.2.3",
    "babel-eslint": "^8.0.3",
    "change-case": "^3.0.1",
    "codeclimate-test-reporter": "^0.5.0",
    "gatsby": "latest",
    "gatsby-link": "latest",
    "gatsby-plugin-glamor": "latest",
    "gatsby-plugin-google-analytics": "latest",
    "gatsby-plugin-manifest": "latest",
    "gatsby-plugin-offline": "latest",
    "gatsby-plugin-sharp": "latest",
    "gatsby-plugin-typescript": "latest",
    "gatsby-remark-autolink-headers": "latest",
    "gatsby-remark-copy-linked-files": "latest",
    "gatsby-remark-images": "latest",
    "gatsby-remark-prismjs": "latest",
    "gatsby-source-filesystem": "latest",
    "gatsby-transformer-json": "latest",
    "gatsby-transformer-remark": "latest",
    "gatsby-transformer-sharp": "latest",
    "graphql-code-generator": "^0.8.14",
    "gray-matter": "^3.1.1",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "5.2.0",
    "react-redux": "^5.0.6",
    "redux-devtools-extension": "^2.13.2",
    "semantic-ui-react": "^0.77.0",
    "slash": "1.0.0",
    "ts-loader": "^3.2.0",
    "typescript": "2.6.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.17",
    "@storybook/addon-knobs": "^3.2.17",
    "@storybook/addon-notes": "^3.2.17",
    "@storybook/addon-options": "^3.2.17",
    "@storybook/react": "^3.2.17",
    "@types/enzyme": "^3.1.5",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.55",
    "@types/react-test-renderer": "^16.0.0",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__addon-knobs": "^3.2.1",
    "@types/storybook__addon-notes": "^3.0.1",
    "@types/storybook__addon-options": "^3.2.0",
    "@types/storybook__react": "^3.0.5",
    "@types/webpack-env": "^1.13.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint-config-xo-react": "0.14.0",
    "eslint-plugin-react": "7.5.1",
    "flat": "^4.0.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "6.0.0",
    "mkdirp": "^0.5.1",
    "plop": "^1.9.0",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "16",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "storybook-readme": "^3.1.1",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "ts-jest": "21.2.4",
    "ts-lint": "4.5.1",
    "xo": "^0.18.2"
  },
  "scripts": {
    "clean": "rimraf -rf public .cache",
    "start": "npm run develop",
    "watch": "npm run develop",
    "develop": "node_modules/.bin/gatsby develop",
    "serve": "node_modules/.bin/gatsby serve",
    "build": "node_modules/.bin/gatsby build",
    "build:pp": "node_modules/.bin/gatsby build --prefix-paths",
    "lint": "npm run lint:ts && npm run lint:js && npm run lint:css && npm run lint:md && npm run lint:english",
    "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "lint:md": "remark .",
    "lint:js": "xo",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:scss": "stylelint src/**/*.scss --syntax scss",
    "lint:english": "write-good './content/**/*.md'",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "graphql-types": "gql-gen --url http://localhost:8000/___graphql --template typescript --out ./src/graphql-types.d.ts",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o public/docs",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info"
  },
  "jest": {
    "globals": {
      "__LINK_PREFIX__": "",
      "__PREFIX_LINKS__": ""
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/",
      "/.cache"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "node tools/update-post-date.js",
      "remark -o",
      "git add"
    ],
    "*.css": [
      "stylelint"
    ]
  },
  "xo": {
    "extends": "xo-react/space",
    "space": true,
    "rules": {
      "no-case-declarations": 0,
      "default-case": 0
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
