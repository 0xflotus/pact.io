{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"listFiles": true,
		"isolatedModules": false,
		"allowJs": true,
		"moduleResolution": "node",
		"jsx": "react",
		"lib": ["dom", "es2015", "es2017"],
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}
