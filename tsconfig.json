{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"listFiles": true,
		"isolatedModules": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}
